<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".QualificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Calificar"
            android:textSize="30sp"
            style="@style/TextAppearance.AppCompat.Title"/>

        <TextView
            android:id="@+id/workerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="El trabajo realizado por:"
            android:textSize="20dp"
            android:layout_marginBottom="15dp"/>

        <ImageView
            android:id="@+id/sugerenciaImagen"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:contentDescription="@string/descripcion"
            android:src="@drawable/sugerencia1" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="15dp"
            android:text="¿Esta satisfecho con el trabajo realizado?" />

        <RatingBar
            android:id="@+id/satisfaccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:numStars="5"
            android:paddingTop="7.5dp"
            android:paddingBottom="7.5dp"
            android:rating="0"
            android:theme="@style/RatingBar"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="15dp"
            android:text="¿Esta Tuvo buena disposición mientras realizaba el trabajo?" />

        <RatingBar
            android:id="@+id/disposición"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:numStars="5"
            android:paddingTop="15dp"
            android:rating="0"
            android:theme="@style/RatingBar"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:text="Enviar"
            android:clickable="true"
            android:background="@drawable/button_style1"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>