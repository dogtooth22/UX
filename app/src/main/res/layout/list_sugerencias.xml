<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sugerencia"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:cardCornerRadius="360dp">

            <ImageView
                android:id="@+id/sugerenciaImagen"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="@string/descripcion"
                android:src="@drawable/sugerencia1" />

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/sugerenciaNombre"
                style="@style/TextAppearance.AppCompat.Body2"
                android:text="Nombre"
                >
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sugerenciaRubro"
                style="@style/TextAppearance.AppCompat.Body2"
                android:text="Trabajo">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sugerenciaUbicacion"
                style="@style/TextAppearance.AppCompat.Body2"
                android:text="Ubicacion">
            </TextView>

        </LinearLayout>
        <Button
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:id="@+id/sugerenciaVerPerfil"
            android:text="@string/verPerfil"
            android:textAllCaps="false"
            android:background="@drawable/button_style1"
            android:textSize="10sp"
            >

        </Button>
    </LinearLayout>


</androidx.cardview.widget.CardView>